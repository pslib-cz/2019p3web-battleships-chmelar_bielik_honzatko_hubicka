@page
@using Microsoft.AspNetCore.Identity
@using Chmelar_Bielik_Honzatko_Hubicka.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<body>
    <div class="container">
        <h1 class="display-4">Welcome to game Battleships!</h1>
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="btn btn-info" href="./Preparation">Create a new game</a>
            <a class="btn btn-info" href="./ActiveGames">Join Game</a>
        }
        else
        {
            <a class="btn btn-info" href="../Identity/Account/Login">Log in</a>
            <a class="btn btn-info" href="../Identity/Account/Register">Register</a>
        }
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BattleShips v0.6 - <a href="/Privacy">Privacy</a>
        </div>
    </footer>
</body>

